  Map<String, dynamic> toJson() {
    return {
      'id': id,
      'user_id': userId,
      'food_name': foodName,
      'quantity_grams': quantityGrams,
      'reason': reason.name,
      'estimated_cost': estimatedCost,
      'carbon_wasted': carbonWasted,
      'notes': notes,
      'wasted_at': wastedAt.toIso8601String(),
    };
  }
}

